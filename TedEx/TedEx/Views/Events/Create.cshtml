@model TedEx.ViewModels.EventFormViewModel
    @{
        ViewBag.Title = "Create";

    }

    <h2>Create an Event</h2>
@using (Html.BeginForm("Create", "Events"))
{
    <p class="alert alert-info">All feilds are <strong>required</strong>!</p>
  @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextAreaFor(m => m.Venue, new {@class = "form-control", autofocus ="autofocus"})
        @Html.ValidationMessageFor(m=>m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextAreaFor(m => m.Date, new { @class = "form-control", placeholder="eg 1 Jan 2000" })
        @Html.ValidationMessageFor(m=>m.Date)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextAreaFor(m => m.Time, new {@class = "form-control" , placeholder="20:00"})
        @Html.ValidationMessageFor(m=>m.Time)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Topic)
        @Html.DropDownListFor(m => m.Topic, new SelectList(Model.Topics, "Id", "Name"), "", new {@class = "form-control"}) @*new SelectList(Source, will take value from, Name property for labels)*@
        @Html.ValidationMessageFor(m=>m.Topic)


    </div>
    <button type="submit" value="Save" class="btn btn-primary"> SAVE</button>
}   

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}